<openerp>
    <data>
		 <menuitem id="main_menu_societe" name="Mini-Projet 2"/> 

		 <record id="project_commande_form_view" model="ir.ui.view">
            <field name="name">project.commande.form</field>
            <field name="model">project.commande</field>
            <field name="arch" type="xml">
                <form string="Client" version="7.0">
					<sheet>
						<notebook >
							<page string="Informations commande">
								<group>
                                    <field name="client"/>
                                    <field name="panier"/>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
            </field>
        </record>
        <record model="ir.ui.view" id="project.commande_tree">
            <field name="name">project.commande.tree</field>
            <field name="model">project.commande</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Informations sur la commande">
                    <field name="client"/>
                    <field name="panier"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_commande_seq">
            <field name="name">Gestion des commandes</field>
            <field name="res_model">project.commande</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

   
       <menuitem name="Mini-projet 2" id="section_main_menu_societe" parent="main_menu_societe" sequence="1" />
        <menuitem name="Gestion des commandes" id="real_menu_commande" parent="section_main_menu_societe" action="action_commande_seq" sequence="4"/>
		
    </data>
