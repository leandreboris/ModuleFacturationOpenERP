<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		 <menuitem id="main_menu_company" name="Mini-Projet 2 [WAKINGO]"/> 
		 <record id="facturation_gestion_en_ligne_famille_article_form_view" model="ir.ui.view">
            <field name="name">facturation_gestion_en_ligne.famille_article.form</field>
            <field name="model">facturation_gestion_en_ligne.famille_article</field>
            <field name="arch" type="xml">
                <form string="Famille" version="7.0">
					<sheet>
						<notebook >
							<page string="Informations générales">
								<group>
								    <field name="code"/>
									<field name="libelle"/>
									<field name="description"/>		
								</group>
                                <p>Les champ marqués (*) sont obligatoires</p>
							</page>
							
						</notebook>
					</sheet>
				</form>
            </field>
        </record>
        <record model="ir.ui.view" id="facturation_gestion_en_ligne_famille_article_tree">
            <field name="name">facturation_gestion_en_ligne.famille_article.tree</field>
            <field name="model">facturation_gestion_en_ligne.famille_article</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Infos famille_article">
                    <field name="code"/>
                    <field name="libelle"/>
                    <field name="description"/>
									
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_famille_article_seq">
            <field name="name">Famille d'articles</field>
            <field name="res_model">facturation_gestion_en_ligne.famille_article</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

   
       <menuitem name="Categorie" id="section_main_menu_categorie" parent="main_menu_company" />
        <menuitem name="Famille articles" id="real_menu_famille" parent="section_main_menu_categorie" action="action_famille_article_seq"/>
		
    </data>
</openerp>