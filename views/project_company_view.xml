<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		 <menuitem id="main_menu_company" name="Mini-Projet 2 [WAKINGO]"/> 
		 <record id="project_company_form_view" model="ir.ui.view">
            <field name="name">project.company.form</field>
            <field name="model">project.company</field>
            <field name="arch" type="xml">
                <form string="Compagnie" version="7.0"> 
                    <sheet>
						<notebook >
							<page string="Données générales sur la société">
                                <group>
                                	<field name="name"/> 
                                    <field name="logo"/> 
                                    <field name="adresse"/> 
                                    <field name="adresse_complement"/> 
                                    <field name="code_postal"/> 
                                    <field name="ville"/>
                                    <field name="pays"/>
                                    <field name="tel"/>
                                    <field name="mobile"/>
                                    <field name="email"/>
                                    <field name="site_web"/>
								</group>
                                <p>Les champ marqués (*) sont obligatoires</p>
							</page>

                            <page string="Informations complémentaires de la société">
								<group>
                                    <field name="forme_juridique" /> 
									<field name="capital" /> 
                                    <field name="numrc"/> 
                                    <field name="numif"/> 
                                    <field name="numice"/> 
                                    <field name="numcnss"/> 
                                    <field name="devise"/>
                                    <field name="theme"/>
								</group>
                                <p>Les champ marqués (*) sont obligatoires</p>
							</page>

						</notebook>
					</sheet>
				</form>
            </field>
        </record>

        <record model="ir.ui.view" id="project_company_tree">
            <field name="name">project.company.tree</field>
            <field name="model">project.company</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Informations sur la société">
                    <field name="name" /> 
                    <field name="logo"/> 
                    <field name="adresse"/> 
                    <field name="adresse_complement"/> 
                    <field name="code_postal"/> 
                    <field name="ville"/>
                    <field name="pays"/>
                    <field name="tel"/>
                    <field name="mobile"/>
                    <field name="email"/>
                    <field name="site_web"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_company_seq">
            <field name="name">Société</field>
            <field name="res_model">project.company</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

   
        <menuitem name="Project" id="section_main_menu_company" parent="main_menu_company" sequence="1"/>
        <menuitem name="Données sur la société" id="real_menu_company" parent="section_main_menu_company" action="action_company_seq" sequence="1"/>
		
    </data>
</openerp>